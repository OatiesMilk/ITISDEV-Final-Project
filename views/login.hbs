<div class="login-backdrop">
    <div class="login-container">
        <div class="login-header">
            <img src="https://i.imgur.com/RpIDrIX.png" alt="Logo" style="height:200px;"> 
            <h2>User Log-in</h2>
        </div>

        <form action="/verifyLogin" method="post">
            <div class="form-group">
                <label for="username" class="label">Username:</label>
                <input type="text" id="username" name="username" class="input-text">
            </div>

            <div class="form-group">
                <label for="password" class="label">Password:</label>
                <input type="password" id="password" name="password" class="input-password" required>
            </div>

            <div class="form-checker-text">
                <label><input type="checkbox" name="remember"> Remember me</label>
            </div>

            <div class="error">
                
            </div>

            <div class="form-group">
                <input type="submit" value="LOG IN" class="input-submit">
            </div>
        </form>

        <div class="login-footer">
            <p>Don't have an account yet? 
                <form action="/gotoAccountRegistration" method="post">
                    <input type="submit" value="Register"></input>
                </form>
            </p>
        </div>
    </div>
</div>